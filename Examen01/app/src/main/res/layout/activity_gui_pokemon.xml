<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI_Pokemon">

    <TextView
        android:id="@+id/tv_EntrenadorXPokemon"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:text="Lista de Pokemones"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_NombreEntrenadorXPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Entrenador: Anthony"
        android:textColor="#494949"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_EntrenadorXPokemon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_EntrenadorXPokemon"
        app:layout_constraintTop_toBottomOf="@+id/tv_EntrenadorXPokemon" />

    <Button
        android:id="@+id/btn_NuevoPokemon"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollView6"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/scrollView6" />

    <Button
        android:id="@+id/btn_AtrasPokemon"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:text="Atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/scrollView6" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_NombreEntrenadorXPokemon"
        app:layout_constraintStart_toStartOf="@+id/tv_NombreEntrenadorXPokemon"
        app:layout_constraintTop_toBottomOf="@+id/tv_NombreEntrenadorXPokemon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_Pokemon"
                android:layout_width="320dp"
                android:layout_height="400dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_verBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="52dp"
        android:text="Ver BD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_EntrenadorXPokemon" />

</androidx.constraintlayout.widget.ConstraintLayout>